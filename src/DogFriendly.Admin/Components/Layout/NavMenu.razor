@using DogFriendly.Admin.Services
@inject AuthenticationService AuthenticationService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DogFriendly.Admin</a>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Accueil
            </NavLink>
        </div>
        @if (AuthenticationService.IsAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/amenities">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Equipements
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/placetypes">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Types de lieux
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/places">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Lieux
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/favoritelist">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Favoris
                </NavLink>
            </div>
        }
        @if (AuthenticationService.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/login">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Se deconnecter
                </NavLink>
            </div>
        }
    </nav>
</div>
