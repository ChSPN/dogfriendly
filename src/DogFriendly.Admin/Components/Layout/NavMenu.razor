@using DogFriendly.Admin.Services
@inject AuthenticationService AuthenticationService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DogFriendly.Admin</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/amenities">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Amenities
            </NavLink>
        </div>
        @if (AuthenticationService.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/login">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Se deconnecter
                </NavLink>
            </div>
        }
    </nav>
</div>
