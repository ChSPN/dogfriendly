    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
    <script src="js/firebase-init.js?v=1.0.1"></script>
    <script src="js/map-component.js?v=1.0.1"></script>
    <script src="js/init-component.js?v=1.0.1"></script>
