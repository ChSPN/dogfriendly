@inherits LayoutComponentBase

<!-- Header -->
<header class="bg-light py-2">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <a title="Accueil" href="/">
                <img src="img/logo.png" alt="Dog Friendly Logo" class="mr-3" style="height: 60px;">
            </a>
            <h1 class="h5 mb-0">Ne partez plus en vacances sans votre meilleur ami!</h1>
        </div>
        <NavMenu />
    </div>
</header>

<!-- Main Map Section -->
<section class="map-section">
    <SearchPlace />
    @Body
</section>

<!-- Footer -->
<footer class="bg-light py-4">
    <div class="container text-center newsletter">
        <div class="form-inline justify-content-center d-flex align-items-center">
            <label for="email" class="me-2">Souscrire à la newsletter</label>
            <input type="email" class="form-control mb-2 me-2" placeholder="Entrez votre email" id="email">
            <button class="btn btn-dark mb-2" id="newsletter">Valider</button>
        </div>
        <nav class="mt-3">
            <a href="travel-tips" class="text-dark mr-3">Conseils pour bien voyager</a>
            <a href="legals-terms" class="text-dark mr-3">Mentions légales</a>
            <a href="privacy-policy" class="text-dark mr-3">Politique de confidentialité</a>
            <a href="contact-us" class="text-dark">Nous contacter</a>
        </nav>
        <p class="text-muted mt-3">&copy; 2024 Dog Friendly. All Rights Reserved</p>
    </div>
</footer>

<!-- Dependencies -->
<script src="js/firebase-init.js"></script>
<script src="js/map-component.js"></script>
<script src="js/init-component.js"></script>