@inherits LayoutComponentBase

<HeadContent>
    <link rel="icon" type="image/png" href="img/logo.png" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
</HeadContent>

<!-- Header -->
<header class="bg-light py-2">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="img/logo.png" alt="Dog Friendly Logo" class="mr-3" style="height: 60px;">
            <h1 class="h5 mb-0">Ne partez plus en vacances sans votre meilleur ami!</h1>
        </div>
        <NavMenu />
    </div>
</header>

<!-- Main Map Section -->
<section class="map-section">
    <div class="map" id="map"></div>
    @Body
</section>

<!-- Footer -->
<footer class="bg-light py-4">
    <div class="container text-center newsletter">
        <form class="form-inline justify-content-center d-flex align-items-center">
            <label for="email" class="mr-2">Souscrire à la newsletter</label>
            <input type="email" class="form-control mb-2 mr-sm-2" placeholder="Entrez votre email">
            <button type="submit" class="btn btn-dark mb-2">Valider</button>
        </form>
        <nav class="mt-3">
            <a href="#" class="text-dark mr-3">About Us</a>
            <a href="#" class="text-dark mr-3">Features</a>
            <a href="#" class="text-dark mr-3">User Example</a>
            <a href="#" class="text-dark mr-3">Pricing</a>
            <a href="#" class="text-dark mr-3">Resources</a>
            <a href="#" class="text-dark">Contact Us</a>
        </nav>
        <p class="text-muted mt-3">&copy; 2024 Dog Friendly. All Rights Reserved</p>
    </div>
</footer>

<!-- Dependencies -->

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
